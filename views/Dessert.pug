mixin dessert(image1, alt1, name, description, price, pieces, image2, alt2)
	- var path = "/images/"
	.col-md-3
		.card-menu
			img.img-menu(src=path + image1, alt="#{alt1}")
			h3.text-center #{name}
			p #{description}
			h4.text-center
				| #{price} 
				span.petit #{pieces}
			img.info-all(src=path + image2, alt= "#{alt2}")