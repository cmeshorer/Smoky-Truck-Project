extends layout

block css
  link(rel='stylesheet', type='text/css', href='/stylesheets/actu_style.css')

block content
  each card in actus
    .container
      section#actus
        .row
          .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3
            img.img-responsive.col-xs-6(src="/images/" + card.image, alt='' + card.image)
        .row
          .col-xs-12
            h2.text-center=card.titre
            p.text-center!=card.sous_titre
