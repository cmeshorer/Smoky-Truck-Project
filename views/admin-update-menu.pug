extends admin_layout

block css
  link(rel='stylesheet', type='text/css', href='/stylesheets/admin_create_actu_style.css')

block content
  .container
    .row
      h2.text-center Espace administrateur : création menu
    .row
      img.img-responsive(src='/images/smoky_logo.svg', alt='Logo SMoky Truck', id="logo")
    .row
      a.text-center(href="/admin/menu" class="btn btn-info") <- Retour à la liste
    br
    br
    .row
      h4.text-center Attention! 4 entrées, 6 plats et 4 desserts sont nécessaires pour l'affichage du Menu. 
    .row
      form(method="POST" enctype="multipart/form-data" )
        .form-group Type de plat *
          br
          br
          input(type='radio', name='button', value=1)
          |  Entrée
          br
          input(type='radio', name='button', value=2)
          |  Plat
          br
          input(type='radio', name='button', value=3)
          |  Dessert

        .form-group
          label(for='name') Nom du plat * - 50 caractères max
          input#name.form-control(type='text' placeholder='Delipizza' name="name" maxlength="50" value=menu.name)



        .form-group
          label(for='description') Description *
          textarea#description.form-control(placeholder='Délicieux et sublime' name="description" )= menu.description



        .form-group
          label(for='price') Prix €€ * - 10 caractères max
          input#sous-titre.form-control(type='number' placeholder="1.0" step="0.01" min="0" max='10' name="price" maxlength="10" value=menu.price)


        .form-group
          label(for='pieces') Autre info * - 10 caractères max
          input#pieces.form-control(type='text' name="pieces" maxlength="10" placeholder="2 parts" value=menu.pieces)



        .form-group
          label.warning(for='icon') Icône ( info. alimentaire ) * - Fichier jpg ou png de 3 mo max, format conseillé : 300px * 200 px
          br
          img(src="/images/" + menu.icon, alt='' + menu.icon, width='100')
          br
          br
          input#icon.form-control(type='file' name="icon" value=menu.icon accept="image/*")
        p * Champ obligatoire
        .form-group
          label.warning(for='image') Belle photo  * - Fichier jpg ou png de 3 mo max, format conseillé : 300px * 200 px
          br
          img(src="/images/" + menu.image, alt='' + menu.image, width='100')
          br
          br
          input#image.form-control(type='file' name="image" value=menu.image accept="image/*")
        p * Champ obligatoire
        button.btn.btn-default(type='submit' onclick="return confirm('Voulez-vous modifier cet élément ?');") Modifier
    script(src='https://cloud.tinymce.com/stable/tinymce.min.js')
    script.
        tinymce.init({ selector:'textarea'});