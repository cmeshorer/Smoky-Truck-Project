block content
  //
    Caroussel
    ==================================================
  section.main-slider
    #myCarousel.carousel.slide.carousel-fade(data-ride='carousel')
      // Carousel items
      .carousel-inner
        .item.active
          img(src='images/carousel1.jpg', alt='')
        .item
          img(src='images/carousel2.jpg', alt='')
        .item
          img(src='images/carousel3.jpg', alt='')
        .item
          img(src='images/carousel4.jpg', alt='')
      // Controls
      .control-box
        a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
          span.control-icon.prev.fa.fa-chevron-left(aria-hidden='true')
          span.sr-only Previous
        a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
          span.control-icon.next.fa.fa-chevron-right(aria-hidden='true')
          span.sr-only Next
  // /. Carousel
